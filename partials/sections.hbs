{{#match @custom.tag_for_special_section}}
{{#get "posts" limit="4" filter="tag:[{{@custom.tag_for_special_section}}]" include="authors,tags"}}
<div class="global-sections{{>global sections_counter=true}}">
	{{#foreach posts}}
	{{>sections_item label=@custom.tag_for_special_section}}
	{{/foreach}}
</div>
{{/get}}
{{else}}
{{#foreach posts limit="1"}}
{{#if primary_tag}}
{{#get "posts" limit="4" filter="tag:{{primary_tag.slug}}+id:-{{id}}" include="authors,tags"}}
<div class="global-sections{{>global sections_counter=true}}">
	{{#foreach posts}}
	{{>sections_item label=(t "See more")}}
	{{/foreach}}
</div>
{{/get}}
{{/if}}
{{/foreach}}
{{/match}}